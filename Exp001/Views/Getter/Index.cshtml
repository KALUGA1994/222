

<!DOCTYPE html>

<html ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-1.3.3.js"></script>
    <script src="~/Scripts/AppGetService.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/ClearFilter.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/ui-bootstrap-csp.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/daterangepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Style.css" />
    <title>@Resources.Resource.PochtAdresa</title>
</head>

<body ng-controller="AdrGet">
    <div style="height:500px; margin-left:50px; margin-right:50px; margin-top:100px">
        

        <table class="table table-bordered">
            
                <caption style="text-align:center; font-size:20px">
                    @Resources.Resource.PochtAdresa
                    
                    <div class="container">
                        <ul class="nav nav-pills pull-right">@Html.Partial("LangMenu")</ul>
                    </div>
                </caption>
                    
            
            <tr>
                <th>
                    <a href="" ng-click="sort('Country1')">@Resources.Resource.Country
                    <i class="glyphicon" ng-class="{'glyphicon-circle-arrow-up': isSortUp('Country1'),
                                                    'glyphicon-circle-arrow-down': isSortDown('Country1')}">
                        </i></a>
                    <input ng-change="someFilter('Country', f.Country1)" type="text" class="form-control" style="margin-top:10px" ng-model="f.Country1" clearable/>
                </th>
                <th>
                    <a href="" ng-click="sort('City1')">@Resources.Resource.City
                        <i class="glyphicon" ng-class="{'glyphicon-circle-arrow-up': isSortUp('City1'),
                                                    'glyphicon-circle-arrow-down': isSortDown('City1')}">
                        </i>
                    </a>
                    <input ng-change="someFilter('City', f.City1)" type="text" class="form-control" style="margin-top:10px" ng-model="f.City1" clearable/>
                </th>
                <th>
                    <a href="" ng-click="sort('Street1')">@Resources.Resource.Street
                        <i class="glyphicon" ng-class="{'glyphicon-circle-arrow-up': isSortUp('Street1'),
                                                    'glyphicon-circle-arrow-down': isSortDown('Street1')}">
                        </i></a>
                    <input ng-change="someFilter('Street', f.Street1)"  type="text" class="form-control" style="margin-top:10px" ng-model="f.Street1" clearable/>
                </th>
                <th>
                    <a href="" ng-click="sort('House')">@Resources.Resource.House
                        <i class="glyphicon" ng-class="{'glyphicon-circle-arrow-up': isSortUp('House'),
                                                    'glyphicon-circle-arrow-down': isSortDown('House')}">
                        </i></a>
                    <input ng-change="someFilter('House', f.House)" type="text" class="form-control" style="margin-top:10px" ng-model="f.House" clearable/>
                </th>
                <th>
                    <a href="" ng-click="sort('Indeks')">@Resources.Resource.Indeks
                        <i class="glyphicon" ng-class="{'glyphicon-circle-arrow-up': isSortUp('Indeks'),
                                                    'glyphicon-circle-arrow-down': isSortDown('Indeks')}">
                        </i>
                    </a>
                    <input ng-change="someFilter('Indeks', f.Indeks)" type="text" class="form-control" style="margin-top:10px" ng-model="f.Indeks" clearable/>
                </th>
                <th>
                    <a href="" ng-click="sort('Data')">@Resources.Resource.Data
                        <i class="glyphicon" ng-class="{'glyphicon-circle-arrow-up': isSortUp('Data'),
                                                    'glyphicon-circle-arrow-down': isSortDown('Data')}">
                        </i></a>
                    <input name="daterange" ng-change="someFilterWithDate('Data')" class="form-control" style="margin-top:10px" ng-model="datePicker"/>
                </th>
            </tr>
            <tr ng-repeat="x in adr.data">
                <td ng-class="{'color-blue': f.Country1 !=null || isSortUp('Country1') || isSortDown('Country1'), 'color-black': f.Country1 == ''}">{{x.Country1}}</td>
                <td ng-class="{'color-blue': f.City1 !=null || isSortUp('City1') || isSortDown('City1'), 'color-black': f.City1 == ''}">{{x.City1}}</td>
                <td ng-class="{'color-blue': f.Street1 !=null || isSortUp('Street1') || isSortDown('Street1'), 'color-black': f.Street1 == ''}">{{x.Street1}}</td>
                <td ng-class="{'color-blue': f.House !=null || isSortUp('House') || isSortDown('House'), 'color-black': f.House == ''}">{{x.House}}</td>
                <td ng-class="{'color-blue': f.Indeks !=null || isSortUp('Indeks') || isSortDown('Indeks'), 'color-black': f.Indeks == ''}">{{x.Indeks}}</td>
                <td ng-class="{'color-blue': pagingInfo.firstdate !=null || isSortUp('Data') || isSortDown('Data'), 'color-black': pagingInfo.firstdate == ''}">{{x.Data}}</td>
            </tr>
        </table>

    </div>
    <div class="panel panel-default">
            <div class="navbar navbar-left" style="margin-left:50px">
                <select id="selectPerPage" class="form-control" style="width:70px; margin-top:20px" ng-model="pagingInfo.itemsPerPage">
                    <option>1</option>
                    <option>2</option>
                    <option>5</option>
                    <option value="10" selected="selected">10</option>
                    <option>25</option>
                </select>
            </div>
           <div class="navbar-right" style="margin-right:50px">
               <uib-pagination style="position:center" previous-text="@Resources.Resource.Previous" next-text="@Resources.Resource.Next" total-items="pagingInfo.totalItems" ng-model="currentPage" items-per-page="pagingInfo.itemsPerPage" on-select-page="selectPage(page)"></uib-pagination>
           </div>
    </div>
</body>
</html>
<script>
    var style = document.createElement('style');
    style.type = 'text/css';
    style.innerHTML =
        '.clearable {' +
        'background-image: url(data:image/gif;base64,R0lGODlhBwAHAIAAAP///5KSkiH5BAAAAAAALAAAAAAHAAcAAAIMTICmsGrIXnLxuDMLADs=);' +
        'background-repeat: no-repeat;' +
        'background-attachment: initial;' +
        'background-position: right -10px center;' +
        '}' +
        '.clearable.x {' +
        'transition: background 0.4s;' +
        'background-position: right 10px center;' +
        '}' +
        '.clearable.onX {' +
        'cursor: pointer;' +
        '}';

    document.getElementsByTagName('head')[0].appendChild(style);

</script>